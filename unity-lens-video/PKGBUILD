pkgname=unity-lens-video
_actual_ver=0.3.14
_extra_ver=daily12.12.05
pkgver=${_actual_ver}.${_extra_ver}
pkgrel=100
pkgdesc="Unity Video lens"
arch=('any')
url="https://launchpad.net/unity-lens-videos"
license=('GPL')
depends=('python2')
makedepends=('python2-distutils-extra')
groups=('unity')
source=("https://launchpad.net/ubuntu/+archive/primary/+files/unity-lens-video_${_actual_ver}${_extra_ver}.orig.tar.gz")
sha512sums=('9cc27920c12477f31135e586640cca92a713bdee7618d8eab6051dbcacbdf2b3e326fc5b853f63071ff41ba764202bdd503bcb022f38a03f0ed18acd9cffb456')

package() {
  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"

  python2 setup.py install --root="${pkgdir}/" --optimize=1

  # Python 2 fix
  sed -i 's|\(#!.*bin.*python$\)|\12|g' "${pkgdir}/usr/lib/unity-lens-video/unity-lens-video"
}

