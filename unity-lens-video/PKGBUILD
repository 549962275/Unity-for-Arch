pkgname=unity-lens-video
pkgver=0.3.10
pkgrel=100
pkgdesc="Unity Video lens"
arch=('any')
url="https://launchpad.net/unity-lens-videos"
license=('GPL')
depends=('python2')
makedepends=('python2-distutils-extra')
groups=('unity')
source=("https://launchpad.net/unity-lens-videos/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('d5baf626e33f5653bffa07806bbf60a4a509c6463e74f0d47001cd32ab1455f5267a79584bdd06923ff140c645e4e18aea858a005df5d4680d6e7e0dca9c7d79')

package() {
  cd "${srcdir}/unity-lens-videos-${pkgver}"

  python2 setup.py install --root="${pkgdir}/" --optimize=1

  # Python 2 fix
  sed -i 's|\(#!.*bin.*python$\)|\12|g' "${pkgdir}/usr/lib/unity-lens-video/unity-lens-video"
}

