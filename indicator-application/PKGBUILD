pkgname=indicator-application
pkgver=0.4.93
pkgrel=100
pkgdesc="A library and indicator to take menus from applications and place them in the panel"
arch=('i686' 'x86_64')
url="https://launchpad.net/indicator-application"
license=('GPL')
depends=('dbus-glib' 'libappindicator3')
groups=('unity')
options=('!libtool')
source=("http://launchpad.net/${pkgname}/0.5/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('36c1c1358eed36e44894776ed6bd974bdef42c49324596185da852bce1867bde1e21da65d733aa0f985e40148bdd9b76f62e572f25ea85c73482ec289c7d1a98')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  autoreconf -vfi

  ./configure --prefix=/usr --libexecdir=/usr/share/${pkgname} --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}
