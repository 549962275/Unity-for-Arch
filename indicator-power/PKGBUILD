# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>

pkgname=indicator-power
pkgver=1.92
pkgrel=100
pkgdesc="A indicator to show the power status of your devices"
arch=('i686' 'x86_64')
url="https://launchpad.net/indicator-power"
license=('GPL')
depends=('dbus-glib' 'libappindicator3')
groups=('unity')
options=('!libtool')
source=("http://launchpad.net/${pkgname}/2.0/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('cf4bf39d9fc009fdf9e9b01cbcea2ec743ccb13a960eb44d4c7bb1397f89e752b0af501b68cb9bb43e1fd5c9460f878d9887ec73fb131d06f5f2b86cb92573dd')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr --libexecdir=/usr/share/${pkgname} --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}
