pkgname=utouch-evemu
pkgver=1.0.8
pkgrel=100
pkgdesc="Event Emulation for the uTouch Stack"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-evemu"
license=('GPL')
depends=('glibc')
makedepends=('xmlto' 'asciidoc')
groups=('unity')
source=("http://launchpad.net/${pkgname}/trunk/${pkgname}-${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
options=('!libtool')
sha512sums=('641eeecc00432a4d22b3fb0278ac7e9d1ce29554a1bea13d59507e4c6d3c2b3336dcb038d4bcbbae7a549182c07340709f05a3df0f9d94ddeb11a4683af574f2')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

