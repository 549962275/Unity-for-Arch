pkgname=utouch-evemu
pkgver=1.0.9
pkgrel=100
pkgdesc="Event Emulation for the uTouch Stack"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-evemu"
license=('GPL')
depends=('glibc')
makedepends=('xmlto' 'asciidoc')
groups=('unity')
source=("http://launchpad.net/${pkgname}/trunk/${pkgname}-${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
options=('!libtool')
sha512sums=('e594267184f1f4a39087522d78dc7dbf4c7a7d28efc8013200be445d15b1a7f066160e60d4fa6b8969e7ec78b7a103cdee6024e917585912e0e63105124b0240')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
