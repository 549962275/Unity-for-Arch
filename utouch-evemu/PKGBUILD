# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>
# Contributor: thn81 <root@scrat>

pkgname=utouch-evemu
pkgver=1.0.9
pkgrel=100
pkgdesc="Event Emulation for the uTouch Stack"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-evemu"
license=('GPL')
depends=('glibc')
makedepends=('xmlto' 'asciidoc')
groups=('unity')
source=("https://launchpad.net/ubuntu/+archive/primary/+files/utouch-evemu_${pkgver}.orig.tar.xz")
options=('!libtool')
sha512sums=('ddf2535a9beed2e57236c40ee178512253e3d8fd95153f76165cca518db45e0b2474fb032ec8958a93693e45fd5f897650ad9108d2748566cf1b51d9c168a117')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
