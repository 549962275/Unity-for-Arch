# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>
# Contributor: thn81 <root@scrat>

pkgname=frame
_actual_ver=2.5.0
_extra_ver=daily12.12.13
pkgver=${_actual_ver}${_extra_ver}
pkgrel=100
pkgdesc="Touch Frame Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/frame"
license=('LGPL')
depends=('libxi')
makedepends=('asciidoc' 'xorg-server-devel')
groups=('unity')
options=('!libtool' '!emptydirs')
source=("https://launchpad.net/ubuntu/+archive/primary/+files/frame_${_actual_ver}${_extra_ver}.orig.tar.gz")
sha512sums=('1c390c7ff8a93d6f1c3d31af602337b96d34785c38f9b5354b6649f1cfd764c5823f65645b86b10cbfd6c21f299b6e15726b7b28da3828878d15bc67ed917f95')

build() {
  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"
  autoreconf -vfi
  ./configure --prefix=/usr --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"
  make DESTDIR="${pkgdir}/" install
}

