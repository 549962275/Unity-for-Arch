pkgname=mtdev
pkgver=1.1.2
pkgrel=100
pkgdesc="A stand-alone library which transforms all variants of kernel MT events to the slotted type B protocol"
arch=('i686' 'x86_64')
url="http://bitmath.org/code/mtdev/"
license=('GPL')
depends=('glibc')
groups=('unity')
options=('!libtool')
source=("${url}${pkgname}-${pkgver}.tar.bz2")
sha512sums=('edd63be4a23b38202fa4a24f25f0f0ba90ff784c89da3a2f85b501cebbeecedf49c889594e2f46dd4913ddf184a68921a1f294dceba3a6db61f302ee91d3d5ac')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}

