# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>

# vercheck-pkgbuild: auto
# vercheck-ubuntu: name=geonames, repo=xenial

pkgname=libgeonames
pkgver=0.1
pkgrel=1
pkgdesc="Library for parsing a local copy of the geonames.org database"
arch=(i686 x86_64)
url="https://git.launchpad.net/~larsu/geonames"
license=(GPL)
depends=(glib2)
makedepends=(gtk-doc intltool)
source=("https://launchpad.net/ubuntu/+archive/primary/+files/geonames_${pkgver}.orig.tar.gz")
sha512sums=('61d1283770e5fe3c8b55917dfa41f69c1345ccf1d4924b60e729e34e7dfb1c88d26c288da41c0dbf475d2e15aed3c0bea881b669c4a61f549fe73199ee0ba34d')

build() {
	cd "geonames-${pkgver}"
	./configure --prefix=/usr
	make
}

package() {
	cd "geonames-${pkgver}"
	make DESTDIR="${pkgdir}/" install
}
