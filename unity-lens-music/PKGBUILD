pkgname=unity-lens-music
pkgver=5.10.0
pkgrel=100
pkgdesc="Music, in the dash"
arch=('i686' 'x86_64')
url="https://launchpad.net/unity-place-music"
license=('GPL')
depends=('libunity' 'banshee')
makedepends=('vala' 'intltool')
groups=('unity')
source=("http://launchpad.net/${pkgname}/${pkgver%%.*}.0/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('ffd66356d51e425c50b68ff098b305109068078cdf1723992a50b086a35678cdf306c3cebac6c7fc60f33818231d546ec32ab6825eda493f11e4e247ff7d1696')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr --libexecdir=/usr/lib/${pkgname} --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}

