pkgname=unity-lens-music
pkgver=5.4.0
pkgrel=100
pkgdesc="Music, in the dash"
arch=('i686' 'x86_64')
url="https://launchpad.net/unity-place-music"
license=('GPL')
depends=('sqlite3' 'libunity' 'banshee')
makedepends=('vala' 'intltool')
groups=('unity')
source=("http://launchpad.net/${pkgname}/${pkgver%%.*}.0/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('58a9abd6e9265ea0ccb42e85205c4e8a0ae377245f10f2c387e24396d8e3ed7b08c75fe45d4ae9817ef048bdda50801cc05a29f341c62109ed7dbb3ec2176de1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr --libexecdir=/usr/lib/${pkgname} --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}
