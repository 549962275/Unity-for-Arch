# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>

pkgname=libaccounts-qt
pkgver=1.2
pkgrel=100
pkgdesc="Qt Library for Single Sign On"
arch=('i686' 'x86_64')
url="http://code.google.com/p/accounts-sso/"
license=('LGPL')
groups=('unity')
depends=('libaccounts-glib' 'qt')
makedepends=('doxygen')
source=("http://accounts-sso.googlecode.com/files/accounts-qt-${pkgver}.tar.bz2")
sha512sums=('a35c7bf47a9feae39d9c6d7b8c88f3c13c510885aecdb9b4ced156139a695201353ae2f21489abfe4e2c7459731abd381dc13e01b688ecf2f92e87114420c1da')

build() {
  cd "${srcdir}/accounts-qt-${pkgver}"

  qmake LIBDIR=/usr/lib QMAKE_CXXFLAGS="${CXXFLAGS}"
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/accounts-qt-${pkgver}"

  make INSTALL_ROOT="${pkgdir}/" install
}

