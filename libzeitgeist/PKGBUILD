pkgname=libzeitgeist
pkgver=0.3.14
pkgrel=100
pkgdesc="Provides a client library for applications that want to interact with the Zeitgeist daemon"
arch=('i686' 'x86_64')
url="https://launchpad.net/libzeitgeist"
license=('LGPL')
depends=('glib2')
groups=('unity')
options=(!libtool)
source=("http://launchpad.net/${pkgname}/${pkgver%.*}/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('8e3e4bd1482ce78235d09054c492ec1a33e7f4080f095f2fc8dc31a0b1d40fd58d8ea22733744ade31126a7688630395a436dcf1faa262574e1db5ec1372dd0d')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}
