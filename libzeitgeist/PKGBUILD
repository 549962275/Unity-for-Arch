pkgname=libzeitgeist
pkgver=0.3.16
pkgrel=100
pkgdesc="Provides a client library for applications that want to interact with the Zeitgeist daemon"
arch=('i686' 'x86_64')
url="https://launchpad.net/libzeitgeist"
license=('LGPL')
depends=('glib2')
groups=('unity')
options=(!libtool)
source=("http://launchpad.net/${pkgname}/${pkgver%.*}/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('845d717870c93483cab830651fedc710db143a146014b4e6d132632c7f903c58bbf6594df760450757f28a2b935a4178da412bcf579f8e5f950e9027e2385c08')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}
