        '0003_Revert_r3134_Remove_Systray_Whitelist.patch'
        '0004_Port_to_XI_1.7.patch'
        '0005_Disable_Werror.patch'
        '0006_Include_vector.patch'
        '0007_Build_Fixes.patch'
        'launcher_bfb.png'
        'unity-migrate-dconf-path.desktop'
