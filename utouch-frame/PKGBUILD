# Contributor: thn81 <root@scrat>

pkgname=utouch-frame
pkgver=2.2.3
pkgrel=100
pkgdesc="Touch Frame Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-frame"
license=('GPL')
depends=('utouch-evemu' 'mtdev' 'libxi')
makedepends=('asciidoc' 'xorg-server-devel')
groups=('unity')
options=('!libtool' '!emptydirs')
source=("https://launchpad.net/${pkgname}/trunk/${pkgname}-${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('51a094c0063a8779d0371adf0ca0a61bc067615d248947f1727e27e9748ab35534d64eedf4d64e898aa7a3bbff560cededd46faa592962dc47fc4176fbb82e64')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static --with-xi
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

