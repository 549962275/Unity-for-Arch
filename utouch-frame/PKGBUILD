# Contributor: thn81 <root@scrat>

pkgname=utouch-frame
pkgver=2.1.0
pkgrel=100
pkgdesc="Touch Frame Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-frame"
license=('GPL')
depends=('utouch-evemu' 'mtdev')
makedepends=('asciidoc')
groups=('unity')
source=("http://launchpad.net/${pkgname}/trunk/v${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
options=('!libtool')
sha512sums=('50d4771013f8fc9e9af176389e1b398111ce635346b695ccce33c23b1a765a302502d1400c1d4e7c5ed9621a09ef4fba39f36584f6afba07d82fb00070d95409')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

