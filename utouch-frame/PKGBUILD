# Contributor: thn81 <root@scrat>

pkgname=utouch-frame
pkgver=2.2.0
pkgrel=101
pkgdesc="Touch Frame Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-frame"
license=('GPL')
depends=('utouch-evemu' 'mtdev')
makedepends=('asciidoc')
groups=('unity')
source=("http://launchpad.net/${pkgname}/trunk/v${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
options=('!libtool')
sha512sums=('6e3242d63a4f4118fc59cdcaf9b4bd64dd5fc59e335b485457387d11ea954e9200c7ba9b84dc9bdc1037072ce61cb4037f390db4c6ca070cceee3c6dbc962101')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static --with-xi
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

