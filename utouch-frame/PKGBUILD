# Contributor: thn81 <root@scrat>

pkgname=utouch-frame
pkgver=2.2.1
pkgrel=100
pkgdesc="Touch Frame Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-frame"
license=('GPL')
depends=('utouch-evemu' 'mtdev')
makedepends=('asciidoc')
groups=('unity')
options=('!libtool')
source=("https://launchpad.net/${pkgname}/trunk/${pkgname}-${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('28cef15bbcb53952bf0ee7bb30a32dd402a28513ef98f50fb6dd037bc504574d15aa68e27541e360c1e0227d8e597572de20be88e7e3ee8a3118b21a6ff39b15')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static --with-xi
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

