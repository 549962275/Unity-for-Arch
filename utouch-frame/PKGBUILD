pkgname=utouch-frame
pkgver=1.1.4
pkgrel=1
pkgdesc="Touch Frame Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-frame"
license=('GPL')
depends=('utouch-evemu' 'mtdev')
makedepends=('asciidoc')
groups=('unity')
source=("http://launchpad.net/${pkgname}/trunk/v${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
options=('!libtool')
sha512sums=("ab341e93e4778bb43c7692c33bf6f5c39fe4e42f480313ea0b0816b152acdc27b53f79103c035ddced6953705ee7d8899641ca808d835f1307998a63cf7586b0")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

