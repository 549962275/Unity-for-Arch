pkgname=utouch-frame
pkgver=2.2.2
pkgrel=100
pkgdesc="Touch Frame Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-frame"
license=('GPL')
depends=('utouch-evemu' 'mtdev')
makedepends=('asciidoc')
groups=('unity')
options=('!libtool')
source=("https://launchpad.net/${pkgname}/trunk/${pkgname}-${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('59bda9a3a8b9e1c46ca61d52b548322769d295791ac87c43b549e3113f6bc52c065792b02306d5062ad59e640f43a0dc20dfcf3e893d5bb316f6c0d767b30357')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static --with-xi
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

