# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>

pkgname=geis
_actual_ver=2.2.15
_extra_ver=daily13.02.14
pkgver=${_actual_ver}${_extra_ver}
pkgrel=100
pkgdesc="Implementation of the GEIS (Gesture Engine Interface and Support) interface."
arch=('i686' 'x86_64')
url="https://launchpad.net/geis"
license=('GPL' 'LGPL')
depends=('grail' 'xorg-xinput' 'python3' 'dbus-core')
makedepends=('xorg-server-devel')
options=('!emptydirs' '!libtool')
source=("https://launchpad.net/ubuntu/+archive/primary/+files/geis_${_actual_ver}${_extra_ver}.orig.tar.gz")
sha512sums=('e3b4d5f9c6641a2c65d31c0cef022b929af7515c8ab75f388e3294d587144895c436efb496fff668d835b1c00cef36c326edfd7a1ac7768299ac1727819ea5f9')

build() {
  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"

  autoreconf -vfi

  ./configure --prefix=/usr --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"
  make DESTDIR="${pkgdir}/" install
}

