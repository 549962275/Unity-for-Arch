pkgname=utouch-grail
pkgver=3.0.1
pkgrel=100
pkgdesc="Gesture Recognition And Instantiation Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-grail"
license=('GPL')
depends=('mtdev' 'utouch-evemu' 'utouch-frame' 'inputproto-ubuntu>=2.1.99.6.1')
source=("http://launchpad.net/${pkgname}/trunk/${pkgname}-${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('be1bce379940a69a416c810bae8d684a9aaad897024bc281506ba04daa23353e97a083495340600393554f236b52fb8b6fb40cd276aee34bf41bdcfa3040bcf1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  # Static library needed for tests
  ./configure --prefix=/usr --with-xi # --disable-static
  MAKEFLAGS="-j1"
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

