pkgname=utouch-grail
pkgver=2.0.1
pkgrel=100
pkgdesc="Gesture Recognition And Instantiation Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-grail"
license=('GPL')
depends=('mtdev' 'utouch-evemu' 'utouch-frame')
source=("http://launchpad.net/${pkgname}/trunk/v${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")

sha512sums=("6d33e3394124c9d297f3e40ebcbbc8a77158258bd61cd487528a918802849f7c65ea46db7bacac8637529bcfa0ea4a859d3e90b7be4c78b011d8a4ede26c481a")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}

