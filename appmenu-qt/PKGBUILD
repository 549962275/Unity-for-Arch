pkgname=appmenu-qt
pkgver=0.2.4
pkgrel=101
pkgdesc="Adds support for application menu to Qt"
arch=('i686' 'x86_64')
url="https://launchpad.net/appmenu-qt"
license=('GPL')
depends=('qt' 'libdbusmenu-qt')
makedepends=('cmake')
groups=('unity')
source=("http://launchpad.net/${pkgname}/trunk/${pkgver}/+download/${pkgname}-${pkgver}.tar.bz2")
sha512sums=('7eb83877b12c1d6b48bc313e94e106db090b222d4e0c09975c2359f26fe9a101a9ff426b67b0119f293ebb04f0f5cb1adc5518c45dead0a554686d7fc6a0b760')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}
