pkgname=gnome-control-center-ubuntu
_ubuntu_rel=0ubuntu4
pkgver=3.3.90.${_ubuntu_rel}
pkgrel=100
pkgdesc="The Control Center for GNOME with Ubuntu's patches"
arch=('i686' 'x86_64')
depends=('gtk3-ubuntu' 'gsettings-desktop-schemas' 'gnome-menus' 'gnome-desktop' 'gnome-settings-daemon-ubuntu' 'upower' 'libgtop' 'cups-pk-helper' 'accountsservice' 'sound-theme-freedesktop' 'gnome-online-accounts' 'network-manager-applet' 'libpulse-ubuntu>=1.1.0ubuntu7-100')
optdepends=('mesa-demos: provides glxinfo for graphics information'
            'apg: adds password generation for user accounts'
            'gnome-color-manager: for color management tasks')
makedepends=('gnome-doc-utils' 'intltool')
groups=('gnome')
url="http://www.gnome.org"
provides=("gnome-control-center=${pkgver}")
conflicts=('gnome-control-center')
install=gnome-control-center.install
license=('GPL')
options=('!libtool' '!emptydirs')
source=("http://download.gnome.org/sources/${pkgname%-*}/${pkgver%.*.*}/${pkgname%-*}-${pkgver%.*}.tar.xz"
        "https://launchpad.net/ubuntu/+archive/primary/+files/${pkgname%-*}_${pkgver%.*}-${_ubuntu_rel}.debian.tar.gz"
        'disable_wacom_panel.patch')
sha512sums=('960bd2d48336f6a7451d8cf486e6b2e68a0d441f3c6f332f2f81ca495865b8a91d9c9a6bfd9fb0270ffdb39b82ce0a3c0c648289c09a2841086563559702a46f'
            '62417d18ac894ba9d7d65f5acff309ad7a8dea3333006d00c180ce467dad83c84edc57338adb5cbf531e002bc336d0a011d977dddd1c4efd48e301d8c91327ea'
            '0b9779ba153f8a0c4f05cf62edd81dae0a879b47f1462a7ba66504651896a4b089461a8d4c0de330e9255866b63a2265385da7ed23df5edf84f07b5838fdc65b')

build() {
  cd "${srcdir}/${pkgname%-*}-${pkgver%.*}"

  # Apply Ubuntu patches

  # Disable patches
    # Disable using Ubuntu's update manager
      sed -i '/05_run_update_manager.patch/d' "${srcdir}/debian/patches/series"
    # Do not use Ubuntu help files
      sed -i '/53_use_ubuntu_help.patch/d' "${srcdir}/debian/patches/series"

  # Fix patches
    # Use Arch Linux logo
    sed -i 's/UbuntuLogo.png/archlinux-vert-dark-grad2.svg/' "${srcdir}/debian/patches/56_use_ubuntu_info_branding.patch"

  for i in $(cat "${srcdir}/debian/patches/series" | grep -v '#'); do
    patch -Np1 -i "${srcdir}/debian/patches/${i}"
  done

  # disable wacom panel - too much work to package
  patch -Np1 -i "${srcdir}/disable_wacom_panel.patch" || true

  autoreconf -vfi
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --disable-scrollkeeper \
    --disable-update-mimedb

  # https://bugzilla.gnome.org/show_bug.cgi?id=656229
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0 /g' -e 's/    if test "$export_dynamic" = yes && test -n "$export_dynamic_flag_spec"; then/      func_append compile_command " -Wl,-O1,--as-needed"\n      func_append finalize_command " -Wl,-O1,--as-needed"\n\0/' libtool
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname%-*}-${pkgver%.*}"

  make DESTDIR="${pkgdir}" install

  # Ubuntu specific files
  install -dm755 "${pkgdir}/usr/share/gnome-control-center/ui/"
  install -dm755 "${pkgdir}/usr/share/pixmaps/"
  install -dm755 "${pkgdir}/usr/share/indicators/session/applications/"
  install -dm755 "${pkgdir}/usr/share/menu/"
  #install -m644 "${srcdir}/debian/UbuntuLogo.png" "${pkgdir}/usr/share/gnome-control-center/ui/"
  # Use Arch Linux branding
  ln -s /usr/share/archlinux/logos/archlinux-vert-dark-grad2.svg "${pkgdir}/usr/share/gnome-control-center/ui/"
  install -m644 "${srcdir}/debian/gnome-control-center.xpm" "${pkgdir}/usr/share/pixmaps/"
  ln -s '/usr/share/applications/gnome-control-center.desktop' "${pkgdir}/usr/share/indicators/session/applications/gnome-control-center.desktop"
  install -m644 "${srcdir}/debian/gnome-control-center.menu" "${pkgdir}/usr/share/menu/"
}
