pkgname=unity-lens-files
pkgver=5.2.0
pkgrel=100
pkgdesc="A daemon exposing your files and file history to Unity"
arch=('i686' 'x86_64')
url="https://launchpad.net/unity-place-files"
license=('GPL')
depends=('libzeitgeist' 'libunity' 'zeitgeist-extensions' 'libxdg-basedir' 'xdg-user-dirs' 'pyxdg')
makedepends=('vala' 'intltool')
groups=('unity')
source=("http://launchpad.net/${pkgname}/${pkgver%%.*}.0/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz")
sha512sums=('ff80a97c53b6b0f99979b9eb32027a19c9aaabc6c28a48c3f229161c752ae01902beb8431c6520e68341e24416ce7053d54eeb75359f4072a571e13144228543')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./autogen.sh --prefix=/usr --libexecdir=/usr/lib/${pkgname} --disable-static
  make ${MAKEFLAGS}
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}
